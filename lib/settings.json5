{
  // https://github.com/shinnn/vscode-stylelint#optional-but-recommended-setup
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "diffEditor.renderSideBySide": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "velocity": "html"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single"
    }
  },
  "emmet.triggerExpansionOnTab": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "typescript"
  ],
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "files.associations": {
    "*.tpl": "html",
    "*.acss": "css",
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": false
  },
  "files.trimTrailingWhitespace": true,
  "jest.autoEnable": false,
  "projectManager.treeview.visible": false,
  "prettier.disableLanguages": [
    "velocity",
    "json"
  ],
  "prettier.eslintIntegration": true,
  // https://github.com/vuejs/vetur/issues/476#issuecomment-337785724
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.stylelintIntegration": true,
  "prettier.trailingComma": "es5",
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/spm_modules": true,
    "**/.history": true,
    "**/.tea": true,
    "**/dist": true,
    "**/es": true,
    "**/dist_html": true,
    "**/_assets": true
  },
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**",
    "**/.history/**"
  ],
  "typescript.check.npmIsInstalled": false,
  // https://vuejs.github.io/vetur/linting-error.html
  // turn off and use eslint
  "vetur.validation.template": false,
  "window.restoreWindows": "all",
  "workbench.startupEditor": "none"
}
